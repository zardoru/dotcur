{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "(Windows) Build Debug",
            "type": "process",
            "command": "C:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Community\\MSBuild\\15.0\\Bin\\msbuild.exe",
            "args": [
                "msvc/raindrop.vcxproj",
                "/property:GenerateFullPaths=true",
                "/t:build",
                "/p:Configuration=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "(Windows) Build Release",
            "type": "process",
            "command": "C:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Community\\MSBuild\\15.0\\Bin\\msbuild.exe",
            "args": [
                "msvc/raindrop.vcxproj",
                "/property:GenerateFullPaths=true",
                "/t:build",
                "/p:Configuration=Release"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "(Windows) Rebuild Release",
            "type": "process",
            "command": "C:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Community\\MSBuild\\15.0\\Bin\\msbuild.exe",
            "args": [
                "msvc/raindrop.vcxproj",
                "/property:GenerateFullPaths=true",
                "/t:Clean;Build",
                "/p:Configuration=Release"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "(Linux) Build Debug",
            "type": "process",
            "command": "scons",
            "args": [
                "debug=1"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "(Linux) Build Release",
            "type": "process",
            "command": "scons",
            "args": [
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}